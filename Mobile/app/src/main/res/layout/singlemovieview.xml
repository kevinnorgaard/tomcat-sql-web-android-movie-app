<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
                android:paddingRight = "@dimen/activity_horizontal_margin"
                android:paddingTop = "@dimen/activity_vertical_margin"
                android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".LoginViewActivity">

    <TextView
            android:text="Title"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/title"
            android:layout_centerHorizontal = "true"
            android:textColor = "@color/blue"
            android:textSize = "35dp" />

    <TextView
            android:text="RELEASE YEAR"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/yearLabel"
            android:focusable = "true"
            android:layout_marginTop = "20dp"
            android:textSize = "18dp"
            android:layout_below = "@+id/title"
            android:textColor="@color/blue"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" />

    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/year"
            android:focusable = "true"
            android:textSize = "18dp"
            android:layout_below = "@+id/yearLabel"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" />

    <TextView
            android:text="DIRECTOR"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/directorLabel"
            android:focusable = "true"
            android:layout_marginTop = "10dp"
            android:textSize = "18dp"
            android:textColor="@color/blue"
            android:layout_below = "@+id/year"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" />

    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/director"
            android:focusable = "true"
            android:textSize = "18dp"
            android:layout_below = "@+id/directorLabel"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" />

    <TextView
            android:text="RATING"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/ratingLabel"
            android:focusable = "true"
            android:layout_marginTop = "10dp"
            android:textSize = "18dp"
            android:textColor="@color/blue"
            android:layout_below = "@+id/director"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" />

    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/rating"
            android:focusable = "true"
            android:textSize = "18dp"
            android:layout_below = "@+id/ratingLabel"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" />

    <LinearLayout
            android:layout_marginTop = "20dp"
            android:layout_below = "@+id/rating"
            android:orientation="horizontal"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

        <LinearLayout
                android:id="@+id/genreList"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:text="Genres:"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/starList"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:text="Stars:"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>