<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
                android:paddingRight = "@dimen/activity_horizontal_margin"
                android:paddingTop = "@dimen/activity_vertical_margin"
                android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".LoginViewActivity">

    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Fabflix"
            android:id = "@+id/title"
            android:layout_centerHorizontal = "true"
            android:textColor = "@color/blue"
            android:textSize = "35dp" />

    <EditText
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_marginTop = "46dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullTextSearch"
            android:layout_below="@id/title"
            android:focusable = "true"
            android:hint="Full text search"/>
    <Button
            android:text="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullTextSearchBtn"
            android:layout_below="@+id/fullTextSearch"
            android:onClick="onFullTextSearch"/>

    <Button
            android:layout_marginTop = "23dp"
            android:text="All Movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/moviesBtn"
            android:onClick="onAllMoviesBtn"
            android:layout_below="@+id/fullTextSearchBtn"/>

</RelativeLayout>